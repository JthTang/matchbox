<%= render 'shared/navbar' %>

<div class="main-container">
  <div class ="row justify-content-center">
    <div class="col-xs-12, col-sm-10 col-lg-6">
      <div class="card">
        <h2>Edit a skill</h2>
          <%= simple_form_for(@skill) do |f| %>
            <%= f.input :name, :label => "Skill name" %>
            <%= f.input :description %>
            <%= f.button :submit, class: "btn-primary" %> <%= link_to "Cancel", :back, {:class=>"btn btn-secondary"} %>
          <% end %>
      </div>
    </div>
  </div>
</div>
