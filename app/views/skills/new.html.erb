<%= render 'shared/navbar' %>
<div class="container">
  <div class ="row justify-content-center">
    <div class="col-xs-12, col-sm-8">
      <h1>Add a new skill</h1>
        <%= simple_form_for(@skill) do |f| %>
          <%= f.input :name, :label => "Skill name" %>
          <%= f.input :description %>
          <%= f.button :submit, class: "btn-primary" %> <%= link_to "Cancel", :back, {:class=>"btn btn-secondary"} %>
        <% end %>
    </div>
  </div>
</div>
