<div class="container">
  <div class="user-info">
    <h2>---Profile</h2>

    <% if @user.photo.attached? %>
      <% @path = @user.photo.key %>
    <% else %>
      <% @path = 'HBnqCUBU2XXNekM4pMAoBegi' %>
    <% end %>

    <%#= cl_image_tag @path, height: 100, width: 100, crop: :fill %>
    <h3><%= @user.first_name %> <%= @user.second_name %></h3>
    <p><%= @user.city %></p>
    <p><%= @user.bio %></p>
  </div>

  <div class="user-skills">
    <h2>---<%= @user.first_name %> <%= @user.second_name %>'s skills</h2>
      <button class="btn btn-primary">Add a new skill</button>
      <div class="cards">
        <% @user.skills.each do |skill| %>
          <div class="card">
            <h3><%= skill.name %></h3>
            <p><%= skill.description %></p>
          </div>
        <% end %>
      </div>
  </div>

  <div class="user-history">
    <h2>---<%= @user.first_name %> <%= @user.second_name %>'s Work History</h2>

    <% @user.work_histories.each do |history|  %>
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= history.company_name %></h2>
          <hr/>
          <p><strong><%= history.job_title %></strong></p>
          <p>From <%= history.start_date %>- <%= history.end_date %></p>
          <p><%= history.description %></p>
        </div>
      </div>
   <% end %>
  </div>
</div>
