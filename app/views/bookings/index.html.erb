<%= render 'shared/navbar' %>
<div class="main-container">
  <div class="row">
    <div class="col-2">
      <div class="user-info">
        <% if @user.photo.attached? %>
          <% @path = @user.photo.key %>
        <% else %>
          <% @path = 'profile_whubsg' %>
        <% end %>
        <div class="profile-pic">
          <%= cl_image_tag(@path, cloud_name:'dopoqpdhm') %>
        </div>
        <h3><%= @user.first_name %> <%= @user.second_name %></h3>
        <p><%= @user.city %></p>
        <p><%= @user.bio %></p>
      </div>
      </div>
      <div class="col-4">
      <div class="user-skills">
        <div class="add-skill">
          <h4>My skills</h4>
          <%= link_to new_skill_path do %>
            <button class="btn btn-primary">Add a new skill</button>
          <% end %>
        </div>
          <div class="cards">
            <% @user.skills.each do |skill| %>
              <div class="card">
                <h3><%= skill.name %></h3>
                <p><%= skill.description %></p>
              </div>
            <% end %>
          </div>
      </div>

  </div>
  <div class="col-6">

  <h4 class="dash-header">My Bookings</h4>
  <div class="user-bookings">

    <p><strong>People have booked me for:</strong></p>


    <% @user.skills.each do |skill| %>

      <% skill.bookings.each do |booking| %>
        <div class="card">
          <p><%= booking.date %></p>
          <p><%= booking.start_time %><%= booking.end_time %></p>
          <p><%= booking.user.first_name %> for <%= booking.skill.name %></p>
        </div>
      <% end %>

    <% end %>
    <hr/>

    <p><strong>I have booked others for:</strong></p>

    <% @user.bookings.each do |booking| %>
      <div class="card">
        <p><%= booking.date %></p>
        <p><%= booking.start_time %><%= booking.end_time %></p>
        <p><%= booking.skill.user.first_name %> for <%= booking.skill.name %></p>
      </div>
    <% end %>
  </div>

  <h4 class="dash-header">My Work History</h4>
  <div class="user-history">

        <% @user.work_histories.each do |history|  %>


          <%= render 'shared/history_card', history: history %>
          <!-- <div class="card-product">
            <div class="card-product-infos">
              <h2><%= history.company_name %></h2>
              <hr/>
              <p><strong><%= history.job_title %></strong></p>
              <p>From <%= history.start_date %>- <%= history.end_date %></p>
              <p><%= history.description %></p>
            </div>
          </div> -->
        <% end %>
      </div>
    </div>
  </div>
</div>
