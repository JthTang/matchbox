<%= render 'shared/navbar' %>
<div class="main-container">
  <div class="row">
    <div class="col">
      <div class="user-info">
    <!--     <#% if @user.photo.attached? %>
          <#% @path = @user.photo.key %>
        <#% else %>
          <#% @path = 'HBnqCUBU2XXNekM4pMAoBegi' %>
        <#% end %> -->
        <%= cl_image_tag("samples/animals/kitten-playing.gif", cloud_name:'dopoqpdhm') %>
        <h3><%= @user.first_name %> <%= @user.second_name %></h3>
        <p><%= @user.city %></p>
        <p><%= @user.bio %></p>
      </div>
      </div>
      <div class="col">
      <div class="user-skills">
        <h2>My skills</h2>
        <%= link_to new_skill_path do %>
          <button class="btn btn-primary">Add a new skill</button>
        <% end %>
          <div class="cards">
            <% @user.skills.each do |skill| %>
              <div class="card">
                <h3><%= skill.name %></h3>
                <p><%= skill.description %></p>
              </div>
            <% end %>
          </div>
      </div>

  </div>
  <div class="col-6">
  <div class="user-bookings">
    <h2>My Bookings</h2>

    <h3>People have booked me for:</h3>

    <% @user.skills.each do |skill| %>

      <% skill.bookings.each do |booking| %>
        <div class="card">
          <p><%= booking.date %></p>
          <p><%= booking.start_time %><%= booking.end_time %></p>
          <p><%= booking.user.first_name %> for <%= booking.skill.name %></p>
        </div>
      <% end %>

    <% end %>

    <h3>I have booked others for:</h3>

    <% @user.bookings.each do |booking| %>
      <div class="card">
        <p><%= booking.date %></p>
        <p><%= booking.start_time %><%= booking.end_time %></p>
        <p><%= booking.skill.user.first_name %> for <%= booking.skill.name %></p>
      </div>
    <% end %>
  </div>

  <div class="user-history">
    <h2>My Work History</h2>

        <% @user.work_histories.each do |history|  %>
          <div class="card-product">
            <div class="card-product-infos">
              <h2><%= history.company_name %></h2>
              <hr/>
              <p><strong><%= history.job_title %></strong></p>
              <p>From <%= history.start_date %>- <%= history.end_date %></p>
              <p><%= history.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
